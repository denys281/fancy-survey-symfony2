<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Fancy Survey{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets filter='cssrewrite,?yui_css' output='assetic/css/compiled/components.min.css'
            'components/bootstrap/css/bootstrap.css'
            'components/bootstrap/css/bootstrap-theme.css'
            'components/font-awesome/css/font-awesome.css'
            'bundles/megogocore/css/theme.css'
            %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
            {% endstylesheets %}
            <!--[if lt IE 7]>
            <link rel="stylesheet" href="{{ asset('components/font-awesome/css/font-awesome-ie7.min') }}" type="text/css" media="all" />
            <![endif]-->
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body data-route="{{ app.request.get('_route') }}" data-homepage_route="{{ path('homepage') }}" data-step_two_route="{{ path('step_two') }}" data-step_three_route="{{ path('step_three') }}" data-clear_session_data_route="{{ path('clear_session_data') }}">
        {% block header %}
            {% block navigation %}
               <navigation>
                    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                        <div class="container">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a class="navbar-brand" href="{{ path('homepage') }}">Fancy Survey</a>
                            </div>
                        </div>
                    </div>
               </navigation>
            {% endblock %}
        {% endblock%}
        <div class="container">
            <div class="col-xs-12 col-sm-9">
                <div class="jumbotron">
                    <h2>Getting your AWESOME PRIZE is easy!</h2>
                    <ol>
                        <li>Sign up and complete a survey</li>
                        <li>Tell us more about yourself</li>
                        <li>Get an awesome prize!</li>
                    </ol>
                </div>
                {% block body %}{% endblock %}
            </div>
            <div id="sidebar" class="col-xs-6 col-sm-3">
                <p>Time remaining to complete your tasks</p>
                {#<div id="time"></div>d>#}
                <h1><span id="time"></span> seconds</h1>
            </div>
        </div>
        {% block javascripts %}
            {% javascripts filter='?yui_js' output='assetic/js/compiled/survey.min.js'
            'components/jquery/jquery.js'
            'components/bootstrap/js/bootstrap.js'
            'components/bootstrap/js/bootstrap.js'
            '@MegogoCoreBundle/Resources/public/js/app/plugins/*'
            '//browserstate.github.io/history.js/scripts/bundled/html4+html5/jquery.history.js'
            '@MegogoCoreBundle/Resources/public/js/app/util/util.js'
            '@MegogoCoreBundle/Resources/public/js/app/controllers/*'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}

        {% endblock %}
    </body>
</html>
